<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>controller.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CattleFilter</filter-name>
        <filter-class>controller.filter.CattleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CattleFilter</filter-name>
        <url-pattern>/AppendCattleServlet</url-pattern>
    </filter-mapping>

    <!-- TODO: Add url pattern of CattleFilter for AlterCattleServlet-->
    
    
</web-app>